{
  "name": "xaio",
  "version": "0.3.0",
  "description": "XAIO \u2014 Personal AI Agent runtime powered by Grok. Run locally, connect to WhatsApp, Telegram, Discord, Slack, Signal.",
  "author": "XAIO Protocol",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "xaio": "./bin/xaio.js"
  },
  "files": [
    "bin/",
    "dist/",
    "templates/",
    "docs/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "gateway": "tsx src/gateway/server.ts",
    "gateway:watch": "tsx watch src/gateway/server.ts",
    "xaio": "tsx src/cli.ts",
    "lint": "eslint src/",
    "test": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "xaio",
    "grok",
    "ai",
    "assistant",
    "cli",
    "whatsapp",
    "telegram",
    "discord",
    "slack",
    "local-first"
